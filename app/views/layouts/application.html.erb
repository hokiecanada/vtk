<!DOCTYPE html>
<html>
<head>
  <title>Immersion Knowledgebase</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="banner">
		<div id="sign_in">
			<% if user_signed_in? %>
				Signed in as <%= current_user.email %>. Not you?
				<%= link_to "Sign out", destroy_user_session_path %>.
			<% else %>
				<%= link_to "Sign Up", new_user_registration_path %> or 
				<%= link_to "Sign In", new_user_session_path %>
			<% end %>
		</div>
		
		<div id="title">
			Immersion Knowledgebase
		</div>
		
		<div id="new_entry">
			<%= link_to '+ Add New Entry', new_paper_path %>
		</div>
	
	</div>

	<div id="navigation">
		<ul>
			<li><%= link_to 'Search', search_path %></li>
			<li><a href="#">About</a></li>
			<li><a href="#">Help</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
	</div>
	
	<div id="body">
		<%= yield %>
	</div>
	
	<div id="footer">
		Copyright 2011 VR Knowledgebase
	</div>
</body>
</html>
