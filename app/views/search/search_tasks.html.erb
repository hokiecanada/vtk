<p id="notice"><%= notice %></p>

<div id="filters">
	<h3>Displaying results for:</h3>
	<center>"<%= @task.task_tag %>"</center>
	<h4>Current Filters:</h4>
	<ul>
		<li>Components of Immersion:
			<% if @f_comps.nil? %>n/a
			<% else %>
				<ul>
					<% @f_comps.each do |f_t| %>
						<li><i><%= f_t.comp_tag %></i> <%= link_to '[X]', :search_task => @search_task, :filter_comps => @f_comps.reject{|n| n == f_t}, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => @display_as, :sort => @sort, :direction => @direction %></li>
					<% end %>
				</ul></i>
			<% end %>
		</li>
		<li>Metrics:
			<% if @f_metrics.nil? %>n/a
			<% else %>
				<ul>
					<% @f_metrics.each do |f_m| %>
						<li><i><%= f_m.metric_tag %></i> <%= link_to '[X]', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @f_metrics.reject{|n| n == f_m}, :filter_systems => @filter_systems, :display_as => @display_as, :sort => @sort, :direction => @direction %></li>
					<% end %>
				</ul></i>		
			<% end %>
		</li>
		<li>Systems:
			<% if @f_systems.nil? %>n/a
			<% else %>
				<ul>
					<% @f_systems.each do |f_s| %>
						<li><i><%= f_s.system_tag %></i> <%= link_to '[X]', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @f_systems.reject{|n| n == f_s}, :display_as => @display_as, :sort => @sort, :direction => @direction %></li>
					<% end %>
				</ul>
			<% end %>
		</li>
	</ul>
	<% if !@f_comps.nil?||!@f_metrics.nil?||!@f_systems.nil? %>
		<div align="right"><%= link_to 'Clear filters', :search_task => @search_task, :display_as => @display_as, :sort => @sort, :direction => @direction %></div>
	<% end %>
	
	<%= form_tag search_tasks_path(:search_task => @search_task), :method => :post do %>
		<input type="hidden" name="filter_comps[]"> 
		<input type="hidden" name="filter_metrics[]"> 
		<input type="hidden" name="filter_systems[]">
		<input type="hidden" name="display_as" id="display_as" value="<%= @display_as %>">
		<%= hidden_field_tag "search_task", @search_task %>
		<%= hidden_field_tag "sort", @sort %>
		<%= hidden_field_tag "direction", @direction %>
	
		<h3>Filter by:</h3>
		<div id="filter_comps_hidden">
			<%= link_to '[+]', "#", :onclick => "Effect.BlindDown('filter_comps_list');Element.show('filter_comps_expanded');Element.hide('filter_comps_hidden');", :remote => true %> Components of Immersion<br>
		</div>
		<div id="filter_comps_expanded" style="display:none">
			<%= link_to '[-]', "#", :onclick => "Effect.BlindUp('filter_comps_list');Element.show('filter_comps_hidden');Element.hide('filter_comps_expanded');", :remote => true %> Components of Immersion<br>
		</div>
		<div id="filter_comps_list" style="display:none">
			<% @comps.each do |comp| %>
				<%= check_box_tag "filter_comps[]", comp.id, !@f_comps.nil?&&@f_comps.include?(comp) %><%= comp.comp_tag %>
				<% if @display_as == "Findings" %>
					(<%= Finding.all(:include => [:tasks,:comps], :conditions => {"tasks.id" => @search_task, "comps.id" => comp}).count() %>)<br>
				<% elsif @display_as == "Experiments" %>
					(<%= Experiment.all(:include => [:tasks,:comps], :conditions => {"tasks.id" => @search_task, "comps.id" => comp}).count() %>)<br>
				<% else %>
					(<%= Paper.where(:id => Experiment.all(:include => [:tasks,:comps], :conditions => {"tasks.id" => @search_task, "comps.id" => comp}).map{|x| x.paper_id}).count() %>)<br>
				<% end %>
			<% end %>
		</div>
		<div id="filter_metrics_hidden">
			<%= link_to '[+]', "#", :onclick => "Effect.BlindDown('filter_metrics_list');Element.show('filter_metrics_expanded');Element.hide('filter_metrics_hidden');", :remote => true %> Metrics<br>
		</div>
		<div id="filter_metrics_expanded" style="display:none">
			<%= link_to '[-]', "#", :onclick => "Effect.BlindUp('filter_metrics_list');Element.show('filter_metrics_hidden');Element.hide('filter_metrics_expanded');", :remote => true %> Metrics<br>
		</div>
		<div id="filter_metrics_list" style="display:none">
			<% @metrics.each do |metric| %>
				<%= check_box_tag "filter_metrics[]", metric.id, !@f_metrics.nil?&&@f_metrics.include?(metric) %><%= metric.metric_tag %> 
				<% if @display_as == "Findings" %>
					(<%= Finding.all(:include => [:tasks,:metrics], :conditions => {"tasks.id" => @search_task, "metrics.id" => metric}).count() %>)<br>
				<% elsif @display_as == "Experiments" %>
					(<%= Experiment.all(:include => [:tasks,:metrics], :conditions => {"tasks.id" => @search_task, "metrics.id" => metric}).count() %>)<br>
				<% else %>
					(<%= Paper.where(:id => Experiment.all(:include => [:tasks,:metrics], :conditions => {"tasks.id" => @search_task, "metrics.id" => metric}).map{|x| x.paper_id}).count() %>)<br>
				<% end %>
			<% end %>
		</div>
		<div id="filter_systems_hidden">
			<%= link_to '[+]', "#", :onclick => "Effect.BlindDown('filter_systems_list');Element.show('filter_systems_expanded');Element.hide('filter_systems_hidden');", :remote => true %> Systems<br>
		</div>
		<div id="filter_systems_expanded" style="display:none">
			<%= link_to '[-]', "#", :onclick => "Effect.BlindUp('filter_systems_list');Element.show('filter_systems_hidden');Element.hide('filter_systems_expanded');", :remote => true %> Systems<br>
		</div>
		<div id="filter_systems_list" style="display:none">
			<% @systems.each do |system| %>
				<%= check_box_tag "filter_systems[]", system.id, !@f_systems.nil?&&@f_systems.include?(system) %><%= system.system_tag %> 
				<% if @display_as == "Findings" %>
					(<%= Finding.all(:include => [:tasks,:systems], :conditions => {"tasks.id" => @search_task, "systems.id" => system}).count() %>)<br>
				<% elsif @display_as == "Experiments" %>
					(<%= Experiment.all(:include => [:tasks,:systems], :conditions => {"tasks.id" => @search_task, "systems.id" => system}).count() %>)<br>
				<% else %>
					(<%= Paper.where(:id => Experiment.all(:include => [:tasks,:systems], :conditions => {"tasks.id" => @search_task, "systems.id" => system}).map{|x| x.paper_id}).count() %>)<br>
				<% end %>			
			<% end %>
		</div>
		<div align="right"><%= submit_tag "Filter Results", :name => nil %></div>
	<% end %>
	<div align="right"><%= link_to 'Reset All', search_path %></div>
</div>

<div id="content">		
	<div id="search_results">
		<% if @display_as == "Findings" %>
			<div id="search_findings">
				<center><small>Display results as:</small><br>
				Findings | <%= link_to 'Experiments', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Experiments', :sort => @sort, :direction => @direction %> | <%= link_to 'Papers', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Papers', :sort => @sort, :direction => @direction %></center>
				<h1>Results:</h1>
				
				<table cellspacing="0" cellpadding="0">
					<tr><th style="width:25%"><%= sortable_task "+", "finding", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Finding <%= sortable_task "-", "finding", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:10%"><%= sortable_task "+", "year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Year <%= sortable_task "-", "year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:15%"><%= sortable_task "+", "author", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Author <%= sortable_task "-", "author", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:20%"><%= sortable_task "+", "paper", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Paper <%= sortable_task "-", "paper", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:30%">Details</th>
					</tr>
					<% @findings.each do |finding| %>
						<tr>
							<td><%= finding.finding %></b></td>
							<td><center><%= finding.experiment.paper.year.strftime("%Y") %></center></td>
							<td><center><%= finding.experiment.paper.authors.first.last_name + " et al" %></center></td>
							<td><center><%= finding.experiment.paper.title %></center></td>
							<td><i>Task: </i><% finding.tasks.each do |task| %>
								<%= link_to task.task_tag, search_tasks_path(:search_task => task) %>
							<% end %><br>
							<i>Component(s) of immersion: </i><% finding.comps.each do |comp| %>
								<%= link_to comp.comp_tag, search_comps_path(:search_comp => comp) %>, 
							<% end %><br>
							<i>Metric(s): </i><% finding.metrics.each do |metric| %>
								<%= link_to metric.metric_tag, search_metrics_path(:search_metric => metric) %>, 
							<% end %><br>
							<i>System(s): </i><% finding.systems.each do |system| %>
								<%= link_to system.system_tag, search_systems_path(:search_system => system) %>, 
							<% end %>
							<div align="right"><%= button_to "More", paper_experiment_finding_path(finding.experiment.paper,finding.experiment,finding) %></div></td>
						</tr>
					<% end %>
				</table>
			</div>
		
		<% elsif @display_as == "Experiments" %>
			<div id="search_experiments">
				<center><small>Display results as:</small><br>
				<%= link_to 'Findings', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Findings', :sort => @sort, :direction => @direction %> | Experiments | <%= link_to 'Papers', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Papers', :sort => @sort, :direction => @direction %></center>
				<h1>Results:</h1>
				
				<table cellspacing="0" cellpadding="0">
					<tr><th style="width:25%"><%= sortable_task "+", "experiments.comp_desc", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Task Description <%= sortable_task "-", "experiments.comp_desc", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:10%"><%= sortable_task "+", "papers.year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Year <%= sortable_task "-", "papers.year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:15%"><%= sortable_task "+", "author", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Author <%= sortable_task "-", "author", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:20%"><%= sortable_task "+", "papers.title", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Paper <%= sortable_task "-", "papers.title", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:30%">Details</th>
					</tr>
					<% @experiments.each do |exp| %>
						<tr>
							<td><%= exp.title %><br><%= exp.task_desc %></td>
							<td><center><%= exp.paper.year.strftime("%Y") %></center></td>
							<td><center><%= exp.paper.authors.first.last_name + " et al" %></center></td>
							<td><%= exp.paper.title %></td>
							<td>
								<i>Task: </i><% exp.tasks.each do |task| %>
									<%= link_to task.task_tag, search_tasks_path(:search_task => task) %>
								<% end %><br>
								<i>Component(s) of immersion: </i><% exp.comps.each do |comp| %>
									<%= link_to comp.comp_tag, search_comps_path(:search_comp => comp) %>, 
								<% end %><br>
								<i>Metric(s): </i><% exp.metrics.each do |metric| %>
									<%= link_to metric.metric_tag, search_metrics_path(:search_metric => metric) %>, 
								<% end %><br>
								<i>System(s): </i><% exp.systems.each do |system| %>
									<%= link_to system.system_tag, search_systems_path(:search_system => system) %>, 
								<% end %><br>
								(<i># of Findings: </i><%= exp.findings.count %>)
								<div align="right"><%= button_to "More", paper_experiment_path(exp.paper,exp) %></div>
							</td>
						</tr>
					<% end %>
				</table>
			</div>
		
		<% else %>
			<div id="search_papers">
				<center><small>Display results as:</small><br>
				<%= link_to 'Findings', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Findings', :sort => @sort, :direction => @direction %> | <%= link_to 'Experiments', :search_task => @search_task, :filter_comps => @filter_comps, :filter_metrics => @filter_metrics, :filter_systems => @filter_systems, :display_as => 'Experiments', :sort => @sort, :direction => @direction %>  | Papers</center>
				<h1>Results:</h1>
				
				<table cellspacing="0" cellpadding="0">
					<tr>
						<th style="width:25%"><%= sortable_task "+", "title", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Title <%= sortable_task "-", "title", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:10%"><%= sortable_task "+", "year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Year <%= sortable_task "-", "year", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:25%"><%= sortable_task "+", "authors.last_name", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "asc" %> Authors <%= sortable_task "-", "authors.last_name", @search_task, @filter_comps, @filter_metrics, @filter_systems, @display_as, "desc" %></th>
						<th style="width:40%">Details</th>
					</tr>
					<% @papers.each do |paper| %>
						<tr>
							<td><%= paper.title %></td>
							<td><center><%= paper.year.strftime("%Y") %></center></td>
							<td><% paper.authors.each do |author| %><%= author.last_name %>, <%= author.first_name %> <%= author.initials %>, <% end %></td>
							<td>
								<i>Task(s): </i><% Task.joins(:experiments).where(:experiments => {:id => paper.experiments}).each do |task| %>
									<%= link_to task.task_tag, search_tasks_path(:search_task => task) %>, 
								<% end %><br>
								<i>Component(s) of immersion: </i><% Comp.joins(:experiments).where(:experiments => {:id => paper.experiments}).each do |comp| %>
									<%= link_to comp.comp_tag, search_comps_path(:search_comp => comp) %>, 
								<% end %><br>
								<i>Metric(s): </i><% Metric.joins(:experiments).where(:experiments => {:id => paper.experiments}).each do |metric| %>
									<%= link_to metric.metric_tag, search_metrics_path(:search_metric => metric) %>, 
								<% end %><br>
								<i>System(s): </i><% System.joins(:experiments).where(:experiments => {:id => paper.experiments}).each do |system| %>
									<%= link_to system.system_tag, search_systems_path(:search_system => system) %>, 
								<% end %><br>
								(<i># of Experiments: </i><%= paper.experiments.count %>, 
								<i># of Findings: </i><% count = 0 %><% paper.experiments.each do |exp| %><% count = count + exp.findings.count %><% end %><%= count %>)
								<div align="right"><%= button_to "More", paper_path(paper) %></div>
							</td>
						</tr>
					<% end %>
				</table>
			</div>
		<% end %>
	</div>
</div>