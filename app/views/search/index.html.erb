					<% elsif i%3 == 1 %>
						<td><%= check_box_tag "search_tasks[]", task.id, false %><%= task.task_tag %></td>
					<% else %>
						<td><%= check_box_tag "search_tasks[]", task.id, false %><%= task.task_tag %></td></tr>
					<% end %>
				<% end %>
				<tr><td colspan="3" align="right"><%= submit_tag "Search", :name => nil %></td></tr>
			</table>
		<% end %>
	</div>

	<div id="metric" style="display:none">
		<%= form_tag search_metrics_path, :method => 'get' do %>
			<input type="hidden" name="search_metrics[]"> 
			<table>
				<% @metrics.each_with_index do |metric,i| %>
