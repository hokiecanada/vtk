<div id="form_title">
	<center><h1>ADD NEW ENTRY</h1></center>
</div>

<div id="form_body">
	<div id="heading">
		<%= link_to edit_paper_path(@paper) do %>
			<div id="large_check_box">
				<%= image_tag "checked.png", :border=>"0", :size=>"40x40" %>
			</div>
			<div id="large_heading_inactive">Publication Details</div>
		<% end %>
	</div>

	<% @paper.experiments.each_with_index do |exp,i| %>
		<% if @experiment != exp %>
			<div id="heading">
				<%= link_to "", :onclick => "$('experiment_#{i}').toggle()", :remote => true do %>
					<div id="large_check_box">
						<%= image_tag "checked.png", :border=>"0", :size=>"40x40" %>
					</div>
					<div id="large_heading_inactive">Experiment #<%= i+1 %> - "<%= exp.title %>"</div>
				<% end %>
			</div>
			
			<div id="experiment_<%= i %>" style="display:none">
				<div id="heading">
					<%= link_to edit_paper_experiment_path(@paper,exp) do %>
						<div id="medium_check_box">
							<%= image_tag "checked.png", :border=>"0", :size=>"30x30" %>
						</div>
						<div id="medium_heading_inactive">Basic Experiment Details</div>
					<% end %>
				</div>

				<% exp.exp_tasks.each_with_index do |exp_task,j| %>
					<div id="heading">	
						<%= link_to "", :onclick => "$('exp_task_#{j}').toggle()", :remote => true do %>
							<div id="medium_check_box">
								<%= image_tag "checked.png", :border=>"0", :size=>"30x30" %>
							</div>
							<div id="medium_heading_inactive">User Task #<%= j+1 %> - "<%= exp_task.title %>"</div>
						<% end %>
					</div>
					
					<div id="exp_task_<%= j %>" style="display:none">
						<div id="heading">	
							<%= link_to edit_paper_experiment_exp_task_path(@paper,exp,exp_task) do %>
								<div id="small_check_box">
									<%= image_tag "checked.png", :border=>"0", :size=>"20x20" %>
								</div>
								<div id="small_heading_inactive">Basic User Task Details</div>
							<% end %>
						</div>
						
						<% exp_task.findings.each_with_index do |finding,k| %>
							<div id="heading">
								<%= link_to edit_paper_experiment_exp_task_finding_path(@paper,exp,exp_task,finding) do %>
									<div id="small_check_box">
										<%= image_tag "checked.png", :border=>"0", :size=>"20x20" %>
									</div>
									<div id="small_heading_inactive">Finding #<%= k+1 %> - "<%= finding.title %>"</div>
								<% end %>
							</div>
						<% end %>
						
						<div id="heading">
							<%= link_to new_paper_experiment_exp_task_finding_path(@paper,exp,exp_task) do %>
								<div id="small_check_box">
									<%= image_tag "unchecked.png", :border=>"0", :size=>"20x20" %>
								</div>
								<div id="small_heading_inactive">Add Finding</div>
							<% end %>
						</div>	
					</div>
				<% end %>
				
				<div id="heading">
					<%= link_to new_paper_experiment_exp_task_path(@paper,exp) do %>
						<div id="medium_check_box">
							<%= image_tag "unchecked.png", :border=>"0", :size=>"30x30" %>
						</div>
						<div id="medium_heading_inactive">Add User Task</div>
					<% end %>
				</div>
			</div>
			
		<% else %>
			<div id="heading">
				<div id="large_check_box">
					<%= image_tag "unchecked.png", :border=>"0", :size=>"40x40" %>
				</div>
				<div id="large_heading_inactive">Experiment #<%= i+1 %> - "<%= exp.title %>":</div>
			</div>

			<div id="heading">
				<%= link_to edit_paper_experiment_path(@paper,exp) do %>
					<div id="medium_check_box">
						<%= image_tag "checked.png", :border=>"0", :size=>"30x30" %>
					</div>
					<div id="medium_heading_inactive">Basic Experiment Details</div>
				<% end %>
			</div>
			
			<% @experiment.exp_tasks.each_with_index do |exp_task,j| %>
				<% if @exp_task != exp_task %>
					<div id="heading">	
						<%= link_to "", :onclick => "$('exp_task_#{j}').toggle()", :remote => true do %>
							<div id="medium_check_box">
								<%= image_tag "checked.png", :border=>"0", :size=>"30x30" %>
							</div>
							<div id="medium_heading_inactive">User Task #<%= j+1 %> - "<%= exp_task.title %>"</div>
						<% end %>
					</div>
					
					<div id="exp_task_<%= j %>" style="display:none">
						<div id="heading">	
							<%= link_to edit_paper_experiment_exp_task_path(@paper,exp,exp_task) do %>
								<div id="small_check_box">
									<%= image_tag "checked.png", :border=>"0", :size=>"20x20" %>
								</div>
								<div id="small_heading_inactive">Basic User Task Details</div>
							<% end %>
						</div>
						
						<% exp_task.findings.each_with_index do |finding,k| %>
							<div id="heading">
								<%= link_to edit_paper_experiment_exp_task_finding_path(@paper,exp,exp_task,finding) do %>
									<div id="small_check_box">
										<%= image_tag "checked.png", :border=>"0", :size=>"20x20" %>
									</div>
									<div id="small_heading_inactive">Finding #<%= k+1 %> - "<%= finding.title %>"</div>
								<% end %>
							</div>
						<% end %>
						
						<div id="heading">
							<%= link_to new_paper_experiment_exp_task_finding_path(@paper,exp,exp_task) do %>
								<div id="small_check_box">
									<%= image_tag "unchecked.png", :border=>"0", :size=>"20x20" %>
								</div>
								<div id="small_heading_inactive">Add Finding</div>
							<% end %>
						</div>	
					</div>
				<% else %>
					<div id="heading">
						<div id="medium_check_box">
							<%= image_tag "unchecked.png", :border=>"0", :size=>"30x30" %>
						</div>
						<div id="medium_heading_active">User Task #<%= j+1 %> - "<%= exp_task.title %>":</div>
					</div>
					
					<div id="inner">
						<div id="inner_title"><h3>BASIC DETAILS</h3></div>
						<div id="inner_table">	
							<table>
								<tr>
									<td>User Task Title:</td>
									<td><b><%= @exp_task.title %></b></td>
								</tr>
								<tr>
									<td>Task Categories:</td>
									<td>
										<b><% @exp_task.tasks.each do |task| %>
											<%= task.task_tag %><br />
										<% end %></b>
									</td>
								</tr>
								<tr>
									<td>Task Description:</td>
									<td><b><%= @exp_task.task_desc %></b></td>
								</tr>
								<tr>
									<td>Interface Description:</td>
									<td><b><%= @exp_task.interface_desc %></b></td>
								</tr>
								<tr>
									<td>Environment Dimensionality:</td>
									<td><b>
										<% if @exp_task.env_dim == 0 %>2.5D
										<% elsif @exp_task.env_dim == 1 %>3D
										<% else %>Not reported
										<% end %>
									</b></td>
								</tr>
								<tr>
									<td>Environment Scale:</td>
									<td><b><%= @exp_task.env_scale %></b></td>
								</tr>
								<tr>
									<td>Environment Density:</td>
									<td><b><%= @exp_task.env_density %></b></td>
								</tr>
								<tr>
									<td>Environment Realism:</td>
									<td><b><%= @exp_task.env_realism %></b></td>
								</tr>
								<tr>
									<td>Environment Description:</td>
									<td><b><%= @exp_task.env_desc %></b></td>
								</tr>
								<tr>
									<td>Metrics:</td>
									<td>
										<b><% @exp_task.metrics.each do |metric| %>
											<%= metric.metric_tag %><br />
										<% end %></b>
									</td>
								</tr>
							</table>
							<table align="right">
								<tr>
									<td><%= button_to "Delete", @exp_task, :confirm => "This will delete the entire user task and all associated findings. Are you want to continue?", :method => :delete %></td>
									<td><%= button_to "Edit", edit_paper_experiment_exp_task_path(@paper,@experiment,@exp_task) %></td>
								</tr>
							</table>
						</div>
					</div>
					
					<% exp_task.findings.each_with_index do |finding,k| %>
						<div id="heading">
							<%= link_to edit_paper_experiment_exp_task_finding_path(@paper,exp,exp_task,finding) do %>
								<div id="small_check_box">
									<%= image_tag "checked.png", :border=>"0", :size=>"20x20" %>
								</div>
								<div id="small_heading_inactive">Finding #<%= k+1 %> - "<%= finding.title %>"</div>
							<% end %>
						</div>
					<% end %>
						
					<div id="heading">
						<%= link_to new_paper_experiment_exp_task_finding_path(@paper,exp,exp_task) do %>
							<div id="small_check_box">
								<%= image_tag "unchecked.png", :border=>"0", :size=>"20x20" %>
							</div>
							<div id="small_heading_inactive">Add Finding</div>
						<% end %>
					</div>
				<% end %>
			<% end %>
			<div id="heading">
				<%= link_to new_paper_experiment_exp_task_path(@paper,@experiment) do %>
					<div id="medium_check_box">
						<%= image_tag "unchecked.png", :border=>"0", :size=>"30x30" %>
					</div>
					<div id="medium_heading_inactive">Add User Task</div>
				<% end %>
			</div>
		<% end %>
	<% end %>
	
	<div id="heading">
		<%= link_to paper_experiments_path(@paper) do %>
			<div id="large_check_box">
				<%= image_tag "unchecked.png", :border=>"0", :size=>"40x40" %>	
			</div>
			<div id="large_heading_inactive">Add Experiment</div>
		<% end %>
	</div>
		
	<% if @paper.status <= 1 %>
		<div id="heading">
			<div id="large_check_box">
				<%= image_tag "unchecked-grey.png", :border=>"0", :size=>"40x40" %>	
			</div>
			<div id="large_heading_disabled">Review & Submit</div>
		</div>
	<% else %>
		<div id="heading">
			<%= link_to review_path(:id => @paper.id) do %>
				<div id="large_check_box">
					<%= image_tag "unchecked.png", :border=>"0", :size=>"40x40" %>	
				</div>
				<div id="large_heading_inactive">Review & Submit</div>	
			<% end %>
		</div>
	<% end %>
</div>